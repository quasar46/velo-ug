extends templates/layout-mount

block main 
    main.main-authorization
        .breadcrumbs._container 
            .breadcrumbs__list   
                a.breadcrumbs__link(href="index.html") Главная
                span Авторизация
        .authorization._container
            h2.authorization__title Войти или создать профиль
            form.form.authorization__form(action="")
                .form__item
                    input.form__input.form__phone.tel(type="text" minlength="10" required)
                    label.form__label.tel(for="") Телефон <span>*</span>
                .form__code(hidden)
                    input.form__input(type="text")
                input(type="submit" value="Получить код").btn-default.authorization__submit
                .consent Нажимая на кнопку, вы соглашетесь с <a href="">Условиями обработки персональных данных</a>



    script(src="js/mask.js")